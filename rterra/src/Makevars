rlib: rterra.cc
	g++ -O2 -fPIC -c -o rterra.o rterra.cc `R CMD config --cppflags`  -I.
	g++ -O2 -Wl,-rpath=${R_PACKAGE_DIR}/libs -Wl,-rpath=./ -L.  -shared rterra.o  libluajit.a  -lterra    -o rterra.so  `R CMD config --ldflags`  

#	g++ -O3 -Wl,-rpath=${R_PACKAGE_DIR}/libs -Wl,-rpath=./ -L.  -shared rterra.o    -lterra -lluajit   -o rterra.so  `R CMD config --ldflags`  

